/* is the class that can be instantiated but cannot be inherited */
public sealed class
{
	//
}

/* is the class that can be inherited but cannot be instantiated */
public abstract class
{
	//
	
	public abstract void Foo();
}

//note
//abstract class can contain abstract function as in example
//this function is to be implemented (with adding "override") in the child class
//abstract function exists only in abstract class
